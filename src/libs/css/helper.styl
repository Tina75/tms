.i-warning
  color: #ff9900
.i-success
  color: #19be6b
.i-info
  color: #2db7f5
.i-error
  color: #ed4014
for num in (1..10)
  .i-ma-{num*5}
    margin num*5 px
  .i-mt-{num*5}
    margin-top num*5 px
  .i-mb-{num*5}
    margin-bottom num*5 px
  .i-mr-{num*5}
    margin-right num*5 px
  .i-ml-{num*5}
    margin-left num*5 px
  .i-pa-{num*5}
    padding num*5 px
  .i-pt-{num*5}
    padding-top num*5 px
  .i-pb-{num*5}
    padding-bottom num*5 px
  .i-pr-{num*5}
    padding-right num*5 px
  .i-pl-{num*5}
    padding-left num*5 px




.van-pull-left
  float left
.van-pull-right
  float right
.van-center
  text-align center
.van-right
  text-align right
.van-text-deleted
  text-decoration line-through
.van-font-bold
  font-weight bold
.van-arrow
  position absolute
  right 15px
  top 50%
  display inline-block
  height 6px
  width 6px
  border-width 2px 2px 0 0
  border-color #c8c8c8
  border-style solid
  transform translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0)
.van-c
  &-black
    color #333
  &-blue
    color #418DF9
  &-yellow
    color #FCAF3B
  &-red
    color #ed4014
  // &-gray
  //   color $gray
  &-gray-dark
    color #666
  &-light-gray
    color #999
  // &-gray-darker
  //   color $gray-darker
for num in (8..30)
  .van-font-{num}
    font-size num px

.van-ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  word-wrap normal
.van-ellipsis--l2
  max-height 40px
  line-height 20px
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
.van-ellipsis--l3
  max-height 60px
  line-height 20px
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 3
  -webkit-box-orient vertical
.van-clearfix
  zoom 1
.van-clearfix:after
  content ''
  display table
  clear both
.van-foot-btn
  border-radius 0
  position fixed
  bottom 0
  font-size 15px
  width 100%
