  .senior-search
    width 36px !important
    height 30px
    line-height 1.4
    letter-spacing 2px
    padding 0
    white-space normal
    margin-right 0 !important
    margin-left 8px !important
    // color: #33b6ca

  .operate-box
    background: rgba(249,249,249,1)
    margin: 15px 0
    padding: 10px

  .search-input
    display inline-block
    width: 200px

    &-senior
