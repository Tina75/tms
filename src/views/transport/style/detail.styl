.transport-detail
  .sub-title
    font-size 14px
    font-family 'PingFangSC-Medium'
    font-weight 500
    color rgba(51,51,51,1)
    padding 15px 0 6px 0
    border-top 1px dashed rgba(203,206,211,1)
    margin-top 25px
  .ivu-input-group
    display inline-block

  // .ivu-btn
  //   height 35px

  .ivu-btn-default
    background #F9F9F9

  .detail-header
    height 60px
    padding-left 24px
    line-height  60px

    &-list
      &-item
        display inline-block
        margin-right 28px
        font-size 13px

  .detail-btn-group
    height 32px
    text-align right
    margin 23px 0 25px

  .detail-info
    >div:nth-child(1)
      margin-bottom 40px

    >div:nth-child(2)
      margin-bottom 54px

    >div:nth-child(3)
      margin-bottom 44px

    >div:nth-child(4)
      margin-bottom 69px

  .detail-btn-item
    margin-left 20px
    min-width 80px

  .detail-field-group
    font-size 14px

    >div
      padding 5px 0
      line-height 32px
  .detail-form-label
    .ivu-form-item-label
      color #777
      font-size 14px
      padding 10px 0
  .detail-field-title
    position relative
    color #777
    display inline-block
    width 100px
    height 32px
    vertical-align top

    &-sm
      position relative
      color #777
      display inline-block
      width 82px
      height 32px
      vertical-align top

  .detail-field-table
    margin-top 31px

  .detail-field-button
    margin 9px 0 22px


  .detail-field-fee
    font-weight bold

  .detail-field-required
    padding-left 10px

    &:before
      content "*"
      position absolute
      width 10px
      height 32px
      left 0
      top 0
      line-height 32px
      text-align left
      color #ed4014
      font-family 'SimSun'
      font-size 12px

  .detail-part-title
    box-sizing border-box
    margin-bottom 15px
    padding-bottom 16px
    border-bottom 1px dashed rgba(203,206,211,1)

    span
      font-size 20px
      font-weight bolder
      margin-left 15px
      vertical-align text-bottom

    &:before
      content ' '
      display inline-block
      width 4px
      height 21px
      background rgba(0,164,189,1)
      border-radius 3px

  .table-footer
    height 48px
    border 1px solid #dcdee2
    border-top none
    line-height 48px
    font-weight: bolder

    &-title
      padding-left 18px
      font-weight normal

    span
      display inline-block
      margin-right 44px

  .detail-payment-way
    display inline-block
    width calc( 100% - 82px )

  .detail-payment-calc
    display inline-block
    height 32px
    line-height 32px
    margin-left 10px
    vertical-align middle

    .icon-jisuanqi1
      font-size 20px

  .detail-field-payinfo
    margin 19px 0 8px

  .detail-log
    display flex
    display -ms-flexbox
    justify-content flex-start
    -ms-flex-pack start
    margin-top 25px

    &-icon
      width 26px
      height 26px
      background rgba(0,164,189,1)
      border-radius 5px
      margin 0 60px 0 30px
      text-align center
      cursor pointer

      i
        display block
        width 16px
        height 16px
        margin 5px
        background url(../../../assets/img-icon-expand.png) no-repeat
        background-size contain
        transition all 0.3s linear

    &-timeline
      height 18px
      margin-top 7px
      transition all 0.3s linear
      overflow hidden

      &-item
        i
          display inline-block
          width 12px
          height 12px
          background-color #C9CED9
          border-radius 50%
          vertical-align middle
        &:first-child
          i
            background-color #00A4BD

        .ivu-timeline-item-content
          font-size 14px

    &-show
      transform rotate(180deg)

  .detail-edit-footer
    margin-top 54px
    margin-bottom 60px
    text-align: center

    &-btn
      width 86px
      margin 0 12px

  .detail-payment-input
    width 78px

  .detail-payment-input-send
    width 102px

  .detail-payment-input,.detail-payment-input-send
    span
      font-size 11px
      line-height 32px
      color #999999

  .unit-yuan
    margin-left 6px
    vertical-align middle
    font-size 11px
    line-height 32px
    color #999999

  .detail-info-input
    display inline-block
    width calc( 100% - 100px ) !important

    &-half
      display inline-block
      width calc( 50% - 56px )
  .ivu-tabs-nav .ivu-tabs-tab
    font-size 22px
    font-weight 600
    // padding-left 0
    // padding-right 0
  .ivu-tabs-bar
    margin-bottom 26px
