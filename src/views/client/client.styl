.info-detail
  .info
    .title
      font-weight bold
      font-size 20px
      border-left 4px solid #00A4BD
      padding-left 15px
      margin-bottom 18px
    .list-info
      border-top 1px dashed #cbced3
      padding-top 25px
      .row
        margin-bottom 20px
        .label
          color #777

  .tabs
    margin-top 32px
    .add
      margin-bottom 14px
.blank
  /deep/ .ivu-form-item-label:before
    visibility: hidden

.modal
  .ivu-input-wrapper,.ivu-select
    height 35px
    .ivu-select-placeholder
      height 35px
      line-height 35px
  /deep/ .ivu-form  .ivu-form-item-label
    text-align left!important
 /deep/ .ivu-modal-body
   padding 30px 40px 40px 30px
 /*字体大小修改*/
 /deep/ .ivu-input
   height 35px
   font-size 13px
 /deep/ textarea.ivu-input
   font-size 13px

//   修改button按钮样式
.left .ivu-btn-primary,
.add .ivu-btn-primary
  width 86px
  height 35px
  font-size 13px
.tabs /deep/
  .ivu-tabs-nav-container
    font-size 16px
//  三个页面公共样式
.header
  display flex
  justify-content space-between
  margin-bottom 14px
.footer
  margin-top 22px
  display flex
  justify-content flex-end

//  搜搜样式
.right
  /deep/ .ivu-select-selected-value
    height 35px
    line-height 35px
  .ivu-select-single .ivu-select-selection
    height 35px
.search-input
  height 35px
  display inline-block
  width: 200px

  &-senior
    display inline-block
    width: 200px
    margin-right 20px
.search-btn-easy
  width 40px
  height 35px
  margin-left -2px
  margin-right 0
  border-top-left-radius 0
  border-bottom-left-radius 0

//  详情部分字体大小修改
.list-info
  font-size 14px
